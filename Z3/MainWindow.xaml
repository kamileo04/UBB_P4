<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRUD Operations" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Height="200"  IsReadOnly="True"/>
            <Button Content="Load Data" Click="LoadData_Click" />
            <Button Content="Save Changes" Click="SaveChanges_Click" />
            <Button Content="Insert Data" Click="InsertData_Click"/>
            <Button Content="Update Data" Click="UpdateData_Click"/>
            <Button Content="Delete Data" Click="DeleteData_Click"/>
        </StackPanel>
    </Grid>
</Window>
